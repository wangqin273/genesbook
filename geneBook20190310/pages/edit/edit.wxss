/* pages/edit/edit.wxss */

page {
  background-color: #f3f3f3;
}

.edit_head {
  width: 100%;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.edit_album {
  box-sizing: border-box;
  width: 100%;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.album_item, .slide_item {
  display: inline-block;
  position: relative;
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.slide_item {
  display: inline-block;
}

.album_img, .slide_img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.img_delete {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.preview_box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #333;
  justify-content: center;
  align-items: center;
  z-index: 9
}

.swiper_preview, .preview_slide {
  width: 100%;
  height: 100%;
}

.preview_slide {
  justify-content: center;
  align-items: center;
}

.preview_img {
  width: 100%;
  height: 100%;
}

.delete_box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #000;
}

.ico_back, .ico_delete {
  width: 30rpx;
  height: 30rpx; 
}

.preview_cur {
  color: #fff;
  font-size: 30rpx;
}

.edit_box {
  width: 100%;
  flex-direction: column;
  background-color: #fff;
  margin-top: 20rpx;
  justify-content: center;
}

.edit_avatar {
  height: 100rpx;
}

.edit_list:last-child {
  border-bottom: none;
}

.edit_avatar_url {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.edit_list {
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #f3f3f3;
  font-size: 32rpx;
  color: #333;
}

.edit_info {
  justify-content: flex-end;
  align-items: center;
  color: #666;
}
 

.edit_arrow {
  align-self: center;
  width: 15rpx;
  height: 27rpx;
  margin-left: 20rpx;
}
 
.edit_input{
  width: 100%;
  text-align: right;
  z-index:0;
} 
.picker_region{
  min-width:200rpx; 
 justify-content: center
}
.mask{
  position: fixed;
  width: 100%;
  height: 100%; 
}

/*城市选择器*/

.citypicker {
  width: 100%;
  height: 500rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
}

.cityheader {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #dfdfdf;
  border-bottom: 1px solid #eee;
  background-color: #f3f3f3;
  z-index: 999;
}

.city-cancel, .city-true {
  text-align: center;
  color: #999;
  font-size: 32rpx;
}

.city-true {
  color: #dd1c21;
}

.citybody {
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
  height: 400rpx;
}

.citycurrent {
  height: 100rpx;
  line-height: 100rpx;
}

.citylist {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
}
 
/*修改消息*/

.edit_monologue {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 690rpx;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translate(-50%, -50%);
  transition: 1s;
}

.message_box {
  position: relative;
  width: 100%;
  font-size: 32rpx;
  border: 1px solid #ddd;
  background: rgba(244, 244, 244, 0.88);
  border-radius: 10rpx;
  overflow: hidden;
}

.textarea {
  box-sizing: border-box;
  width: 100%;
  margin: 20rpx 20rpx 50rpx 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  min-height: 160rpx;
  max-height: 320rpx;
}

.corner_tip {
  position: absolute;
  bottom: 12rpx;
  right: 26rpx;
  font-size: 26rpx;
  color: #444;
}

.edit_save {
  margin: 50rpx auto;
  width: 690rpx;
  height: 88rpx;
  background: #ff4686;
  border-radius: 88rpx;
  font-size: 32rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}

/*发布按钮*/

.submit_btn {
  position: fixed;
  bottom: 0;
  left: 0;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  width: 100%;
  height: 88rpx;
  background-color: #dd1c21;
}

.edit_ratio {
  flex: 1;
  height: 100%;
}

.edit_picker {
  position: relative;
  width: 100%;
}

.picker_ratio {
  position: absolute;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 100%;
 
}
.picker_default{
   position: absolute;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 100%;
   font-size: 28rpx;
   color: #999
}
.edit_message {
  width: 100%;
  padding: 20rpx 30rpx;

}

.message_text {
  width: 100%;
  height: 200rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #333;
  background: #fff;
}

/*生成海报*/

.canvas-poster {
  position: fixed;
  width: 400px;
  height: 400px;
  top: 100%;
  left: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}
