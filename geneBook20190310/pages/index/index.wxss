/**index.wxss**/

/* 导航样式*/

/*滚动导航栏 */

.scroll_tabs {
  display: block;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  z-index: 9;
  white-space: nowrap;
  overflow: hidden;
}

.scroll_tabs_item {
  position: relative;
  padding: 0 30rpx;
  line-height: 80rpx;
  display: inline-block;
}

.scroll_tabs_text {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 0;
}

.scroll_tabs_cur {
  font-size: 24rpx;
  color: #000;
  font-weight: bold;
  padding: 10rpx 0;
}

/*banner*/
.top-swiper {
  margin-top: 80rpx;
  width: 100%;
  height: 360rpx;
  text-align: center;
  background-color: #fff;
}

.swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-imgshow {
  width: 100%;
  height: 360rpx;
}
/*列表*/
.wrapper {
  display: flex;
  width: 100%;
  padding: 22rpx;
  justify-content: space-between;
}

.side_left, .side_right {
  display: flex;
  flex-direction: column;
  width: 342rpx;
}

.list {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0rpx 5rpx 15rpx #ccc;
  background-color: #fff;
  overflow: hidden;
  font-size: 24rpx;
}

.list_cover {
  width: 100%;
  border-radius: 10rpx 10rpx 0 0;
}

.list_text {
  padding: 20rpx;
  flex-direction: column;
}

.list_title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.list_count {
  align-items: center;
  padding: 10rpx 0;
}

.list_picture {
  width: 80rpx;
  align-items: center;
}

.list_like {
  align-items: center;
}

.list_number {
  padding: 0 15rpx;
  font-size: 20rpx;
  color: #999;
}

.list_icon {
  width: 24rpx;
  height: 24rpx;
}

.list_user {
  align-items: center;
}

.user_avatar {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #ccc;
}

.user_text {
  font-size: 20rpx;
  flex-direction: column;
  align-items: center;
}

.edit_btn {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.edit_btn_bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.edit_btn_plus {
  position: relative;
  font-size: 48rpx;
  line-height: 48rpx;
}

.edit_btn_text {
  position: relative;
  font-size: 24rpx;
  margin-bottom: 15rpx;
}

.btn_getuserinfo {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  font-size: 0;
  opacity: 0;
  z-index: 999;
}
