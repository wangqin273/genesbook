page {
  background-color: #f3f3f3;
}

.profile_head {
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.profile_album {
  width: 100%;
  flex-wrap: wrap;
}

.album_item, .slide_item {
  position: relative;
  width: 216rpx;
  height: 216rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.swiper_album {
  width: 100%;
  height: 530rpx;
}

.slide_item {
  display: inline-block;
}

.album_img, .slide_img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.album_item:nth-child(3n), .slide_item:nth-child(3n) {
  margin-right: 0;
}

.img_delete {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.preview_box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #333;
  justify-content: center;
  align-items: center;
}

.swiper_preview, .preview_slide {
  width: 100%;
  height: 100%;
}

.preview_slide {
  justify-content: center;
  align-items: center;
}

.preview_img {
  width: 100%;
  height: 100%;
}

.delete_box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #000;
}

.ico_back, .ico_delete {
  width: 30rpx;
  height: 30rpx;
}

.preview_cur {
  color: #fff;
  font-size: 30rpx;
}

.profile_box {
  width: 100%;
  padding-left: 24rpx;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 20rpx;
  justify-content: center;
}

.profile_avatar {
  height: 140rpx;
}

.profile_list:last-child {
  border-bottom: none;
}

.profile_avatar_url {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.profile_list {
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 105rpx;
  padding-right: 24rpx;
  border-bottom: 1px solid #f3f3f3;
  font-size: 32rpx;
  color: #2d2d2d;
}

.profile_info {
  justify-content: flex-end;
  align-items: center;
  color: #666;
}

.profile_monologue {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  max-width: 480rpx;
  height: 40rpx;
}

.profile_arrow {
  width: 15rpx;
  height: 27rpx;
  margin-left: 20rpx;
}

/* 修改昵称 */

.edit_nick {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 640rpx;
  height: 480rpx;
  margin-left: -320rpx;
  margin-top: -240rpx;
  padding: 0 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translateY(0);
  transition: 1s;
  z-index: 101;
}

.edit_input {
  border: 1px solid #ddd;
  border-radius: 8rpx;
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
}

.edit_tips {
  width: 100%;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx 0;
}

.edit_btn {
  margin-top: 50rpx;
  width: 100%;
  height: 88rpx;
  background: #ff4686;
  border-radius: 88rpx;
  font-size: 32rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}

.ico_close {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  width: 72rpx;
  height: 72rpx;
  margin-left: -36rpx;
}

/* 修改性别 */

.edit_sex {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 24rpx;
  flex-direction: column;
  z-index: 101;
}

.sex_option {
  width: 100%;
  height: 98rpx;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 2rpx;
  font-size: 36rpx;
  color: #ff2570;
}

.sex_option:first-child {
  color: #2572ff;
}

.sex_option:last-child {
  margin-top: 20rpx;
  color: #2d2d2d;
}

/*城市选择器*/

.citypicker {
  width: 100%;
  height: 500rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  z-index: 101;
}

.cityheader {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #dfdfdf;
  border-bottom: 1px solid #eee;
  background-color: #f3f3f3;
  z-index: 999;
}

.city-cancel, .city-true {
  text-align: center;
  color: #999;
  font-size: 32rpx;
}

.city-true {
  color: #f45189;
}

.citybody {
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
  height: 400rpx;
}

.citycurrent {
  height: 100rpx;
  line-height: 100rpx;
}

.citylist {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
}

/*身高选择器*/

.stature_list {
  height: 100rpx;
  line-height: 100rpx;
  justify-content: center;
  font-size: 32rpx;
}

/*修改个性签名*/

.edit_monologue {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 690rpx;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translate(-50%, -50%);
  transition: 1s;
  z-index: 101;
}

.message_box {
  position: relative;
  width: 100%;
  font-size: 32rpx;
  border: 1px solid #ddd;
  background: rgba(244, 244, 244, 0.88);
  border-radius: 10rpx;
  overflow: hidden;
}

.textarea {
  box-sizing: border-box;
  width: 100%;
  margin: 20rpx 20rpx 50rpx 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  min-height: 160rpx;
  max-height: 320rpx;
}

.corner_tip {
  position: absolute;
  bottom: 12rpx;
  right: 26rpx;
  font-size: 26rpx;
  color: #444;
}

.profile_save {
  margin: 50rpx auto;
  width: 690rpx;
  height: 88rpx;
  background: #ff4686;
  border-radius: 88rpx;
  font-size: 32rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}
